{
  "name": "cmg",
  "displayName": "cmg",
  "description": "Generate commit messages using Gemini AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cmg.commit",
        "title": "Generate commit"
      }
    ],
    "configuration": {
      "title": "Commit Message Generator",
      "properties": {
        "cmg.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Gemini AI"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0"
  },
  "dependencies": {
    "@google/genai": "^1.15.0",
    "axios": "^1.7.7",
    "simple-git": "^3.27.0"
  }
}
